<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MyToDoFragment"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/register_bg"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/e_todo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToDos"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:fontFamily="@font/roboto_thin"
            android:textSize="32dp"
            android:textColor="@color/white"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EADBDB"
            android:layout_below="@+id/e_todo_title"
            android:id="@+id/ev_todo_rec_view"/>

        <Button
            android:id="@+id/ev_todo_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/plusbutton" />

        <Button
            android:id="@+id/ev_back_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/login_button"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#92129D"
            android:textSize="22sp"/>
    </RelativeLayout>

</FrameLayout>