<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EventFragment.EventDescriptionFragment"
    android:background="@drawable/login_background"
    android:clickable="true"
    android:focusable="true"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/f_e_d_rl1"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/f_e_d_backImg"
            android:layout_width="63dp"
            android:layout_height="35dp"
            android:src="@drawable/back"/>



        <Button
            android:id="@+id/f_e_d_setDescBtn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Set Description"
            android:textSize="10sp"
            android:textColor="#92129D"
            android:background="@drawable/rect_btn"
            android:backgroundTint="@color/white"
            android:layout_centerInParent="true" />


    </RelativeLayout>


    <EditText
        android:id="@+id/f_e_d_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect"
        android:backgroundTint="#D9D9D9"
        android:gravity="top|start"
        android:padding="15dp"
        android:layout_below="@+id/f_e_d_rl1"/>

</RelativeLayout>