<?xml version="1.0" encoding="utf-8"?>
<!--Drawer layout, we have to make it default for the Navigation View
to work correctly, we also store a layout for other UI elements-->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_e_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    tools:context=".EventActivity">


    <!-- Draw your view whatever you want to draw -->
    <FrameLayout
        android:id="@+id/fragment_event_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--Here we store the other elements of the UI-->
    <RelativeLayout
        android:id="@+id/activity_event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <!--Search bar-->
        <SearchView
            android:id="@+id/e_search_bar"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:background="@drawable/email_bg"
            android:fontFamily="@font/roboto_thin"
            android:inputType="textAutoComplete|textAutoCorrect"
            android:padding="10dp"
            android:textSize="18sp" />

        <!--Recycler view, this displays all the events-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/e_recycler_view"
            android:layout_below="@+id/e_search_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </androidx.recyclerview.widget.RecyclerView>

        <!--Container for the 3 images that we use as buttons-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="visible">

            <!--First image, groups button-->
            <ImageView
                android:id="@+id/a_e_open_group_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:text="Button1"
                android:textAllCaps="false"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                app:srcCompat="@drawable/groupeventsbutton"
                android:layout_centerVertical="true"/>

            <!--Second image, create event button-->
            <ImageView
                android:id="@+id/a_e_create_event_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:text="Button1"
                android:layout_centerInParent="true"
                android:textAllCaps="false"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                app:srcCompat="@drawable/createeventsbutton" />

            <!--Third image, myevents button-->
            <ImageView
                android:id="@+id/a_e_show_my_events_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="sans-serif"
                android:text="Button3"
                android:clickable="true"
                android:textAllCaps="false"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                app:srcCompat="@drawable/myeventsbutton" />

        </RelativeLayout>

    </RelativeLayout>


    <!--Here we set the navigation view's settings(header, menu)-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/a_e_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="#92129D"
        app:itemIconTint="@color/black"
        android:background="#DFD9D9"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout >