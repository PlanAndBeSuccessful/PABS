<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CalendarFragment"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/calendar_upperpart"
            android:background="@drawable/login_background">
            <TextView
                android:id="@+id/calendar_curr_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="MM/DD/YYYY"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:padding="20dp"
                android:layout_centerVertical="true"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/login_button"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#92129D"
                android:textSize="22sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/calendar_back_btn"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar_upperpart"
            android:id="@+id/calendar_day_container"
            android:background="@color/grey">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curent_Month"
                android:id="@+id/calendar_curr_month"
                android:layout_centerHorizontal="true"
                android:background="@color/quantum_amberA200"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/calendar_curr_month"
                android:weightSum="7">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Mon"
                    android:textSize="18dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Tue"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Wed"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Thu"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Fri"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Sat"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:text="Sun"
                    android:textSize="18dp" />
            </LinearLayout>
        </RelativeLayout>

        <sun.bob.mcalendarview.views.ExpCalendarView
            android:layout_below="@+id/calendar_day_container"
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:id="@+id/calendar_calendar"
            android:background="@color/white"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar_calendar"
            android:id="@+id/calendar_rec_view"/>

    </RelativeLayout>

</FrameLayout>