<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".Fragments.EventFragment.EventRepetitionFragment"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/f_e_rep_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/f_e_rep_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/f_e_rep_rl2"
        android:layout_below="@+id/f_e_rep_rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        >

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/f_e_rep_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repetition"
            android:textOn="On"
            android:textOff="Off"
            android:gravity="center"
            android:textColor="#008F36" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/f_e_rep_rl3"
        android:layout_below="@id/f_e_rep_rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/f_e_rep_rl3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Select frequency"/>

        <!--Spinner For Selecting public/private-->
        <Spinner
            android:id="@+id/f_e_rep_sp"
            android:overlapAnchor="false"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:dropDownWidth="120dp"
            android:layout_marginRight="50dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/email_bg"
            android:layout_toRightOf="@+id/f_e_rep_rl3_tv" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/f_e_rep_rl4"
        android:layout_below="@+id/f_e_rep_rl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/f_e_rep_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/login_button"
            android:text="Save"/>

    </RelativeLayout>

</RelativeLayout>