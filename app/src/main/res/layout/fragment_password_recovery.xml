<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PasswordRecoveryFragment"
    android:background="@color/white"
    android:clickable="true">

    <!--Screen-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_bg"
        android:clickable="true">

    <!--Password Recovery text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Recovery"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_thin"
        android:gravity="start"
        android:paddingTop="50dp"
        android:paddingLeft="30dp"
        android:paddingBottom="20dp" />

        <!--container-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:id="@+id/txtedit">

        <!--e-mail edit text-->
        <EditText
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/email_bg"
            android:drawableLeft="@drawable/emailbox_ic"
            android:drawablePadding="10dip"
            android:ems="10"
            android:fontFamily="@font/roboto_thin"
            android:hint="e-mail"
            android:padding="15dp"
            android:textColorHint="#000000"
            android:id="@+id/PR_email"
            android:singleLine="true"/>
    </RelativeLayout>

        <!--done button-->
        <Button
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtedit"
            android:layout_centerHorizontal="true"
            android:text="Done"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:background="@drawable/login_button"
            android:textColor="#92129D"
            android:id="@+id/PR_done_btn"/>
    </RelativeLayout>
</FrameLayout>