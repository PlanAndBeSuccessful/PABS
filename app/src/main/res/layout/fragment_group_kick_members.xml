<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GroupFragment.GroupKickMembersFragment"
    android:background="@drawable/register_bg"
    android:clickable="true"
    android:focusable="true"
    android:padding="15dp">


    <RelativeLayout
        android:id="@+id/f_g_k_m_rl0"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/f_g_k_m_backImg"
            android:layout_width="63dp"
            android:layout_height="35dp"
            android:src="@drawable/back" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/f_g_k_m_rl1"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f_g_k_m_rl0"
        android:layout_marginTop="110dp">


        <EditText
            android:id="@+id/f_g_k_m_et"
            android:layout_width="353dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:background="@drawable/email_bg"
            android:drawableLeft="@drawable/member_ic"
            android:drawablePadding="15dip"
            android:ems="10"
            android:fontFamily="@font/roboto_thin"
            android:hint="member name"
            android:maxLength="30"
            android:maxLines="1"
            android:padding="15dp"
            android:singleLine="true"
            android:textColorHint="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/f_g_k_m_rl2"
        android:layout_width="396dp"
        android:layout_height="132dp"
        android:layout_below="@+id/f_g_k_m_rl1"
        android:paddingTop="30dp">

        <Button
            android:id="@+id/f_g_k_m_removeStaffBtn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/login_button"
            android:text="Remove Member"
            android:textAllCaps="false"
            android:textColor="#92129D"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/f_g_k_m_rl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f_g_k_m_rl2"
        android:layout_marginTop="30dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/f_g_k_m_rl3_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_black_italic"
            android:paddingBottom="10dp"
            android:text="Members:" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/f_g_k_m_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f_g_k_m_rl3_tv" />

    </RelativeLayout>


</RelativeLayout>