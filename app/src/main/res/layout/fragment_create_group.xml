<?xml version="1.0" encoding="utf-8"?>
<!--Creating event-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GroupFragment.CreateGroupFragment"
    android:id="@+id/fragment_event_container"
    android:background="@drawable/register_bg"
    android:clickable="true">

    <!--Container-->
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Create Event Text-->
        <TextView
            android:id="@+id/c_g_create_group_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:paddingRight="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/roboto_thin"
            android:text="Create Group"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <!--Event Name Edit text-->
        <EditText
            android:id="@+id/c_g_group_name_edit"
            android:singleLine="true"
            android:maxLines="1"
            android:background="@drawable/email_bg"
            android:drawableLeft="@drawable/event_ic"
            android:drawablePadding="10dp"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/roboto_thin"
            android:hint="Group name"
            android:textColorHint="#000000"
            android:padding="15dp"
            android:layout_below="@+id/c_g_create_group_text"
            android:layout_centerHorizontal="true" />

        <!--Next Button-->
        <Button
            android:id="@+id/c_g_next_button"
            android:text="Next"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:textColor="#92129D"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/login_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

        <!--Back Button-->
        <Button
            android:id="@+id/c_g_back_button"
            android:text="Back"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:textColor="#92129D"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/login_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>